<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="36dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chalets_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            app:layout_constraintStart_toEndOf="@+id/ivchalets"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ivchalets"
            android:layout_width="150dp"
            android:padding="3dp"
            android:background="#4C4C4C"
            android:scaleType="fitXY"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/chalets_descripcion"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@+id/chalets_name"
            app:layout_constraintStart_toEndOf="@+id/ivchalets"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/chalets_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:padding="6dp"
            app:layout_constraintStart_toEndOf="@+id/ivchalets"
            app:layout_constraintBottom_toBottomOf="@+id/ivchalets"
            app:layout_constraintTop_toBottomOf="@+id/chalets_descripcion"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>